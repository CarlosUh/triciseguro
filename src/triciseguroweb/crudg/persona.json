{
	"model_name":"Persona",
	"soft_deletes":"yes",
	"pk":"id",
	"localize":"yes",
	"table":"persona",
    "fields": [	
		{
			"name":"nombre",
			"type":"string"
		},

		{
			"name":"apellido",
			"type":"string"
		},

		{
			"name":"f_nacimiento",
			"type":"string"
		},

		{
			"name":"genero",
			"type":"string"
		},

		{
			"name":"direccion",
			"type":"string"
		},

		{
			"name":"telefono",
			"type":"string"
		}


	],


    "relationships": [
        {
            "name": "ubicaciones",
            "type": "belongsTo",
            "class": "App\\Models\\Ubicacion"
        },
        {
            "name": "pasajero",
            "type": "hasOne",
            "class": "App\\Models\\Pasajero"
        },
        {
            "name": "taxista",
            "type": "hasOne",
            "class": "App\\Models\\Taxista"
        }

    ],
    "validations": [
        {
            "field": "nombre",
            "rules": "required|min:5|max:20"
        },
		{
            "field": "apellido",
            "rules": "required|min:5"
        }
        ,
		{
            "field": "f_nacimiento",
            "rules": "required|min:8"
        } ,
		{
            "field": "genero",
            "rules": "required|min:8"
        } ,
		{
            "field": "direccion",
            "rules": "required|min:8"
        }
         ,
		{
            "field": "telefono",
            "rules": "required|min:8"
        } 

	]

}