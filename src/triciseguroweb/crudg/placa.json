{
    "model_name": "placa",
    "soft_deletes": "yes",
    "pk": "id",
    "localize": "yes",
    "table": "placas",
    "fields": [{
            "name": "nombre",
            "type": "string"
        },
        {
            "name": "color",
            "type": "string"
        },
        {
            "name": "tamanio",
            "type": "string"
        },
        {
            "name": "mototaxi_id",
            "type": "integer#unsigned"
        }
    ],
    "foreign_keys": [
        {
            "column": "mototaxi_id",
            "references": "id",
            "on": "mototaxi",
            "onDelete": "cascade"
        }
    ],    
    "relationships": [
        {
            "name": "mototaxi",
            "type": "belongsTo",
            "class": "App\\Models\\Mototaxi"
        }
        

    ],
    "validations": [{
        "field": "nombre",
        "rules": "required|min:5|max:20"
    },
    {
        "field": "color",
        "rules": "required|min:3|max:20"
    }
]
}
